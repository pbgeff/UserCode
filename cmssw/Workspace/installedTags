addpkg RecoParticleFlow/PFProducer V15-01-05
addpkg PhysicsTools/Configuration        V00-12-00

# for CSC halo filter (not yet updated for 2012)
cvs co -r V00-00-08 RecoMET/METAnalyzers

# DataFormats/METReco not needed for release >=520
#cvs co -r lhx_12JAN2012_v1 DataFormats/METReco
cvs co -r lhx_10APR2012_v1 RecoMET/METFilters

scram b -rj4
